        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title PoodCast
        link(rel="stylesheet", href="css/styles.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@600;700&display=swap")
